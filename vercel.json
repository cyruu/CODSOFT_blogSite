{
  "version": 2,
  "name": "my-project",
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/users/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/blogs/(.*)",
      "dest": "/backend/server.js"
    },
    {
      "src": "/decodeJwtToken",
      "dest": "/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ]
}
